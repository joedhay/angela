<div class="container">
    <% if @errors > 0 %>
      <div class="alert alert-warning" id="users_error">
        <a href="#" class="close" data-dismiss="alert">&times;</a
        <strong>Error!</strong> <%= @error_alert %>
      </div>
<%- end %>


  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">

      <fieldset>
        <h1 class="text-center login-title">Sign in to continue to Spectrum</h1>

      <div>
        <!--<img class="profile-img" src="../spectrum.psd" alt="">-->
        <%= form_tag(authenticate_users_path) do %>
         <label><%= t('general.username') %></label>
          <p><input type="text" class="form-control" name="username"/></p>
          <label><%= t('general.password') %></label>
          <p><input type="password" class="form-control" name="password"/></p>
          <button class="btn btn-lg btn-primary btn-block" type="submit"><%= t('spectrum.general.login') %></button>
        <% end %>
      </div>
      </fieldset>
      <%= link_to t('users.create'),registration_users_path, id: "user_reg", class: "text-center new-account" %>
    </div>
  </div>
</div>

